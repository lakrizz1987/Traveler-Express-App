<main class="details-container">
    <h1>{{searchedTrip.name}}</h1>
    <img class="details-image" src="{{searchedTrip.imageUrl}}" >
    <div class="details">
        <p>{{searchedTrip.description}}</p>
        <p class="details-category"><span>Категория:</span>{{searchedTrip.category}}</p>
        <a class="btn-details" href="/trips">Назад</a>
        <a class="btn-details" href="/edit/{{searchedTrip._id}}">Промени</a>
        <a class="btn-details" href="/delete/{{searchedTrip._id}}">Изтрий</a>
    </div>
</main>