<main>
    <form class="search-form" action="/search" method="">
        <input type="text" class="search" name="search" placeholder="Търси по име...">
        <input type="submit" value="Търси">
    </form>
    {{#if err}}
    <h1>{{err}}</h1>
    {{/if}}
    {{#if noTrips}}
    <h2>Sorry no trips!</h2>
    {{/if}}
    {{#each trips}}
    <section class="article-container">
        <h1>{{name}}</h1>
        <div class="img-article-container">
            <img src="{{imageUrl}}" alt="img">
        </div>
        <p class="article-text">{{description}}</p>
        <span><a href="/details/{{_id}}" class="see-more-btn">ВИЖ ОЩЕ...</a></span></p>
    </section>
    <div class="border"></div>
    {{/each}}

</main>